<?xml version="1.0" encoding="UTF-8"?>
<project name="crypto" default="all">
  
  
  <property file="crypto.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/access-bridge.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jaccess.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunmscapi.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.lib.classpath">
    <pathelement location="${basedir}/lib/bcpkix-jdk15on-151.jar"/>
    <pathelement location="${basedir}/lib/bcprov-jdk15on-151.jar"/>
    <pathelement location="${basedir}/lib/mysql-connector-java-5.1.34-bin.jar"/>
    <pathelement location="${basedir}/lib/teacode-common.jar"/>
  </path>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module Crypto -->
  
  <dirname property="module.crypto.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.crypto" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.crypto" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.crypto" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.crypto" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="crypto.output.dir" value="${module.crypto.basedir}/out/production/Crypto"/>
  <property name="crypto.testoutput.dir" value="${module.crypto.basedir}/out/test/Crypto"/>
  
  <path id="crypto.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="crypto.module.production.classpath">
    <path refid="${module.jdk.classpath.crypto}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crypto.runtime.production.module.classpath">
    <pathelement location="${crypto.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crypto.module.classpath">
    <path refid="${module.jdk.classpath.crypto}"/>
    <pathelement location="${crypto.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  <path id="crypto.runtime.module.classpath">
    <pathelement location="${crypto.testoutput.dir}"/>
    <pathelement location="${crypto.output.dir}"/>
    <path refid="library.lib.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.crypto">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.crypto">
    <patternset refid="excluded.from.module.crypto"/>
  </patternset>
  
  <path id="crypto.module.sourcepath">
    <dirset dir="${module.crypto.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.crypto" depends="compile.module.crypto.production,compile.module.crypto.tests" description="Compile module Crypto"/>
  
  <target name="compile.module.crypto.production" depends="register.custom.compilers" description="Compile module Crypto; production classes">
    <mkdir dir="${crypto.output.dir}"/>
    <javac2 destdir="${crypto.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.crypto}/javac">
      <compilerarg line="${compiler.args.crypto}"/>
      <bootclasspath refid="crypto.module.bootclasspath"/>
      <classpath refid="crypto.module.production.classpath"/>
      <src refid="crypto.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.crypto"/>
    </javac2>
    
    <copy todir="${crypto.output.dir}">
      <fileset dir="${module.crypto.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.crypto.tests" depends="register.custom.compilers,compile.module.crypto.production" description="compile module Crypto; test classes" unless="skip.tests"/>
  
  <target name="clean.module.crypto" description="cleanup module">
    <delete dir="${crypto.output.dir}"/>
    <delete dir="${crypto.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.crypto" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.crypto" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.crypto:jar" value="${basedir}/out/artifacts/Crypto_jar"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="temp.jar.path.Crypto.jar" value="${artifacts.temp.dir}/Crypto.jar"/>
  </target>
  
  <target name="artifact.crypto:jar" depends="init.artifacts, compile.module.crypto" description="Build &#39;Crypto:jar&#39; artifact">
    <property name="artifact.temp.output.crypto:jar" value="${artifacts.temp.dir}/Crypto_jar"/>
    <mkdir dir="${artifact.temp.output.crypto:jar}"/>
    <jar destfile="${temp.jar.path.Crypto.jar}" duplicate="preserve" filesetmanifest="mergewithoutmain">
      <zipfileset dir="${crypto.output.dir}"/>
      <zipfileset src="${basedir}/lib/bcpkix-jdk15on-151.jar"/>
      <zipfileset src="${basedir}/lib/teacode-common.jar"/>
      <zipfileset src="${basedir}/lib/bcprov-jdk15on-151.jar"/>
      <zipfileset src="${basedir}/lib/mysql-connector-java-5.1.34-bin.jar"/>
    </jar>
    <copy file="${temp.jar.path.Crypto.jar}" tofile="${artifact.temp.output.crypto:jar}/Crypto.jar"/>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.crypto:jar" description="Build all artifacts">
    <mkdir dir="${artifact.output.crypto:jar}"/>
    <copy todir="${artifact.output.crypto:jar}">
      <fileset dir="${artifact.temp.output.crypto:jar}"/>
    </copy>
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>